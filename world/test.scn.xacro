<?xml version="1.0"?>

<scenario xmlns:xacro="http://ros.org/wiki/xacro">
	<environment>
		<ned latitude="41.7777" longitude="3.0333"/>
		<ocean>
			<water density="1000.0" jerlov="0.2"/>
		</ocean>
		<atmosphere>
			<sun azimuth="40.0" elevation="10.0"/>
		</atmosphere>
	</environment>

	<xacro:include filename="$(find world_of_stonefish)/metadata/looks.scn.xacro"/>
    <xacro:include filename="$(find world_of_stonefish)/metadata/materials.scn.xacro"/>


	<static name="Bottom" type="model">
        <physical>
            <mesh filename="objects/flat_terrain.obj" scale="10.0" convex="true"/>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </physical>
        <visual>
            <mesh filename="objects/flat_terrain.obj" scale="10.0"/>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </visual>
        <material name="Rock"/>
        <look name="Gray"/>
        <world_transform xyz="0.0 0.0 40.0" rpy="0.0 0.0 0.0"/>
    </static>


</scenario>